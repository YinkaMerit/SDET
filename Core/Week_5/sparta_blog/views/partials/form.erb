<form class="" action="/<%= @post[:id] %>" method="post">
  <div class="">
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= @post[:title] %>" placeholder="Enter title">
  </div>
  <div class="">
    <label for="body">Body</label>
    <input type="textarea" name="body" value="<%= @post[:body] %>" placeholder="Enter body of the post">
  </div>
  <div class="">
    <input type="submit" name="" value="Save Post">
  </div>

  <% if @post[:id] != "" %>
    <input type="hidden" name="_method" value="put">
  <% end %>
</form>
